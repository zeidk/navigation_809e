<launch>
  <arg name="world_name" default="$(find navigation_809e)/world/usar.world" />
  <arg name="model" default="waffle" />
  <arg name="x" default="0" />
  <arg name="y" default="-2" />
  <arg name="yaw" default="0" />
  <arg name="map_file" default="$(find navigation_809e)/maps/usar.yaml" />
  <arg name="rviz_config" default="$(find navigation_809e)/rviz/navigation.rviz" />

  <!-- Launch turtlebot3 bringup -->
  <include file="$(find navigation_809e)/launch/mapping/bringup.launch">
    <arg name="world_name" value="$(arg world_name)" />
    <arg name="model" value="$(arg model)" />
    <arg name="x" value="$(arg x)" />
    <arg name="y" value="$(arg y)" />
    <arg name="yaw" value="$(arg yaw)" />
    <arg name="rviz_config" value="$(arg rviz_config)" />
  </include>

  <!-- Load the map -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Start localization -->
  <include file="$(find navigation_809e)/launch/mapping/start_amcl.launch">
    <arg name="initial_pose_x" value="$(arg x)" />
    <arg name="initial_pose_y" value="$(arg y)" />
    <arg name="initial_pose_a" value="$(arg yaw)" />
  </include>

<!--  Start navigation-->
  <include file="$(find turtlebot3_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
  </include>
</launch>
